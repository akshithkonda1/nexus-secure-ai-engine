# Core gateway secrets
AUTHORIZED_API_KEYS=replace-with-production-keys
TRUSTED_ORIGINS=https://console.example.com,https://app.example.com

# Rate limiting configuration (required for production)
NEXUS_RATE_LIMIT_STORAGE_URL=redis://redis:6379/0
NEXUS_RATE_LIMITS=100/minute,1000/hour,5000/day

# Engine configuration
NEXUS_ENV=prod
NEXUS_TENANT_ID=tenant-prod
NEXUS_INSTANCE_ID=instance-prod
NEXUS_DEFAULT_USER_ID=system
NEXUS_MODELS_PATH=/run/secrets/models.json

# Memory providers
NEXUS_MEM_PROVIDERS=aws
AWS_REGION=us-east-1
NEXUS_DDB_MESSAGES=NexusMessages
NEXUS_DDB_INDEX=NexusMessagesByTs

# Encryption
NEXUS_DATA_KEY_B64=base64-encoded-32-byte-master-key

# Health monitor
NEXUS_HEALTH_ENABLE=1
NEXUS_HEALTH_INTERVAL_SEC=900

# Flask network
FLASK_HOST=0.0.0.0
FLASK_PORT=8443
